<form action="/articles/<%=@article.id%>" method="post">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<label for="title">Enter article title: </label><input type="text" name="article[title]" id="title" value="<%=@article.title%>"><br>
<label for="content">Enter article content: </label><br><textarea name="article[content]" id="content" cols="30" rows="10"><%=@article.content%></textarea><br>
<input type="submit" value="Submit">
</form>